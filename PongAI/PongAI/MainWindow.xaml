<Window x:Class="PongAI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PongAI"
        mc:Ignorable="d"
        Title="Pong AI" Height="500" Width="800" Background="Black"
        KeyDown="Window_KeyDown" KeyUp="Window_KeyUp">
    <Canvas Name="GameCanvas">
        <!-- Piłka -->
        <Ellipse Name="Ball" Width="20" Height="20" Fill="White" />

        <!-- Paletka gracza -->
        <Rectangle Name="PlayerPaddle" Width="10" Height="80" Fill="White" />

        <!-- Paletka przeciwnika (AI) -->
        <Rectangle Name="AIPaddle" Width="10" Height="80" Fill="White" />
    </Canvas>
</Window>
